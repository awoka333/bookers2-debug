
<div class="row">
	<div class="col-xs-3">

		<h2>User info</h2>
		<%= render 'users/profile', user: @book_detail.user %>

		<h2>New book</h2>
		<%= render 'books/form', book: @book %>

	</div>

	<div class="col-xs-9">
		<h2>Book detail</h2>

		<table class="table">
				<tr>
					<td>
						<%= link_to user_path(@book_detail.user) do %>
							<%= attachment_image_tag(@book_detail.user, :profile_image, :fill, 100, 100, fallback: "no-image-mini.jpg") %><br>
						<%= @book_detail.user.name %>
						<% end %>
					</td>
					<td><%= link_to @book_detail.title, book_path(@book_detail) %></td>
					<td><%= @book_detail.body %></td>
					<td><% if @book_detail.favorited_by?(current_user) %>
						<li style="list-style:none;">
  							<%= link_to book_favorites_path(@book_detail), method: :delete do %>
    							<i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
    							<%= @book_detail.favorites.count %>
  							<% end %>
						</li>
						<% else %>
						<li style="list-style:none;">
  							<%= link_to book_favorites_path(@book_detail), method: :post do %>
    							<i class="far fa-heart" aria-hidden="true"></i>
    							<%= @book_detail.favorites.count %>
  							<% end %>
						</li>
						<% end %>
					</td>
					<td><span>コメント数：<%= @book_detail.book_comments.count %></span></td>

					<% if @book_detail.user == current_user %>
						<td><%= link_to "Edit", edit_book_path(@book_detail), class: "btn-sm btn-success edit_book_#{@book_detail.id}" %></td>
						<td><%= link_to "Destroy", book_path(@book_detail), method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn-sm btn-danger destroy_book_#{@book_detail.id}" %></td>
					<% end %>
				</tr>
		</table>

		<table class="table">
			<tbody>
				<% @book_comments.each do |comment| %>
					<tr>
						<td>
							<%= link_to user_path(comment.user) do %>
								<%= attachment_image_tag(comment.user, :profile_image, :fill, 60, 60, fallback: "no-image-mini.jpg") %><br>
								<%= comment.user.name %>
							<% end %>
						</td>
						<td><%= comment.comment %></td>
						<% if comment.user == current_user %>
							<td><%= link_to "Destroy",  book_book_comment_path(comment.book, comment), method: :delete, class: "btn-sm btn-danger" %></td>
						<% end %>
					</tr>
				<% end %>
			</tbody>
		</table>

		<div>
			<%= form_with(model:[@book_detail, @book_comment], local: true) do |f| %>
				<div class="col-xs-11">
      		<%= f.text_area :comment, rows:'5', class: "form-control", placeholder: "コメント" %>
      	</div>
      	<div class="col-xs-1 d-flex">
  				<%= f.submit "送信", class: "btn btn-lg btn-base-1 mt-20 pull-right" %>
  			</div>
			<% end %>
		</div>
	</div>
</div>

